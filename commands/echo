const { SlashCommandBuilder } = require('@discordjs/builders');

module.exports = {
	data: new SlashCommandBuilder()
		.setName('echo')
		.setDescription('Повторялка обычная')
		.addStringOption(option => option.setName('value').setDescription('Любой текст который тебе надо, бот напишет от своего имени это.').setRequired(true)),
		
	async execute(interaction) {
		const value = interaction.options.getString('value');
		if (value) return interaction.reply(value);
		return interaction.reply('Укажите хоть какой-то текст.');
	},
};